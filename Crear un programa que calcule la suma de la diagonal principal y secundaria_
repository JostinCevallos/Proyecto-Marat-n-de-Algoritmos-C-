#include <iostream>
#include <vector>

int main() {
    int n;

    // Solicitar el tama√±o de la matriz (n x n)
    std::cout << "Introduce el tama\244o de la matriz cuadrada (n): ";
    std::cin >> n;

    // Crear la matriz (usando vector de vectores)
    std::vector<std::vector<int>> matriz(n, std::vector<int>(n));

    // Solicitar los elementos de la matriz
    std::cout << "Introduce los elementos de la matriz:" << std::endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cin >> matriz[i][j];
        }
    }

    int suma_diagonal_principal = 0;
    int suma_diagonal_secundaria = 0;

    // Calcular la suma de la diagonal principal y secundaria
    for (int i = 0; i < n; ++i) {
        // Diagonal principal: fila es igual a columna (matriz[i][i])
        suma_diagonal_principal += matriz[i][i];

        // Diagonal secundaria: fila + columna es igual a n - 1 (matriz[i][n-1-i])
        suma_diagonal_secundaria += matriz[i][n - 1 - i];
    }

    // Mostrar los resultados
    std::cout << "Suma de la diagonal principal: " << suma_diagonal_principal << std::endl;
    std::cout << "Suma de la diagonal secundaria: " << suma_diagonal_secundaria << std::endl;

    return 0;
}
