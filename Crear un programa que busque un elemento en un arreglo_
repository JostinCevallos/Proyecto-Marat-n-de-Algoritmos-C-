#include <iostream>

int main() {
    int arreglo[] = {10, 20, 30, 40, 50};
    int tamano = sizeof(arreglo) / sizeof(arreglo[0]); // Calcula el tamaño del arreglo
    int elemento_a_buscar = 30;
    bool encontrado = false;
    int indice = -1;

    // Itera a través del arreglo
    for (int i = 0; i < tamano; ++i) {
        if (arreglo[i] == elemento_a_buscar) {
            encontrado = true;
            indice = i;
            break; // Sale del bucle si el elemento es encontrado
        }
    }

    // Muestra el resultado
    if (encontrado) {
        std::cout << "El elemento " << elemento_a_buscar << " se encontró en el índice " << indice << std::endl;
    } else {
        std::cout << "El elemento " << elemento_a_buscar << " no se encontró en el arreglo." << std::endl;
    }

    return 0;
}













