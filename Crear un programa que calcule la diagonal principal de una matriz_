#include <iostream>
#include <vector>

int main() {
    int n;
    // Se solicita al usuario el tamaño de la matriz
    std::cout << "Ingrese el tama\244o de la matriz cuadrada (n): ";
    std::cin >> n;

    // Se crea una matriz de n x n (usando std::vector para un manejo más flexible)
    std::vector<std::vector<int>> matriz(n, std::vector<int>(n));

    // Se llena la matriz con valores ingresados por el usuario
    std::cout << "Ingrese los elementos de la matriz:" << std::endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cout << "Elemento [" << i << "][" << j << "]: ";
            std::cin >> matriz[i][j];
        }
    }

    // Se imprime la matriz completa
    std::cout << "\nLa matriz es:" << std::endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cout << matriz[i][j] << "\t";
        }
        std::cout << std::endl;
    }

    // Se calcula y se imprime la diagonal principal
    std::cout << "\nLa diagonal principal es: ";
    int sumaDiagonal = 0;
    for (int i = 0; i < n; ++i) {
        // La condición i == j identifica los elementos de la diagonal principal [3, 8]
        std::cout << matriz[i][i] << " ";
        sumaDiagonal += matriz[i][i];
    }
    std::cout << std::endl;

    // Se imprime la suma de la diagonal principal (la traza)
    std::cout << "La suma de la diagonal principal (traza) es: " << sumaDiagonal << std::endl;

    return 0;
}
