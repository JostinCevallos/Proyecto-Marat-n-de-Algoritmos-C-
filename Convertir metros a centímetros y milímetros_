#include <iostream>

using namespace std;

int main() {
    float metros, centimetros, milimetros;

    // Solicitar al usuario que ingrese la longitud en metros
    cout << "Ingrese la longitud en metros: ";
    cin >> metros;

    // Realizar las conversiones
    // 1 metro = 100 centímetros
    centimetros = metros * 100.0;
    // 1 metro = 1000 milímetros
    milimetros = metros * 1000.0;

    // Mostrar los resultados
    cout << metros << " metros equivalen a:" << endl;
    cout << centimetros << " centimetros" << endl;
    cout << milimetros << " milimetros" << endl;

    return 0;
}
