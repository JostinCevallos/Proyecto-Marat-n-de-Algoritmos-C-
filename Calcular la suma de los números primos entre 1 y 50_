#include <iostream>
#include <cmath> // Para usar sqrt

// Función para verificar si un número es primo
bool esPrimo(int num) {
    if (num <= 1) {
        return false;
    }
    if (num == 2) {
        return true;
    }
    if (num % 2 == 0) {
        return false;
    }
    for (int i = 3; i <= sqrt(num); i += 2) {
        if (num % i == 0) {
            return false;
        }
    }
    return true;
}

int main() {
    int sumaPrimos = 0;

    // Iterar desde 2 hasta 50 para encontrar y sumar los números primos
    for (int i = 2; i <= 50; ++i) {
        if (esPrimo(i)) {
            sumaPrimos += i;
        }
    }

    std::cout << "La suma de los números primos entre 1 y 50 es: " << sumaPrimos << std::endl;

    return 0;
}














