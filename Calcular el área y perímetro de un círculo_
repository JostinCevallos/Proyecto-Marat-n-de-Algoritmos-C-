#include <iostream>
#include <cmath> // Para usar M_PI

int main() {
    // Definir la constante pi
    const double PI = M_PI;
    double radio, area, perimetro;

    // Solicitar el radio al usuario
    std::cout << "Introduce el radio del circulo: ";
    std::cin >> radio;

    // Calcular el área
    area = PI * radio * radio; // O PI * pow(radio, 2)

    // Calcular el perímetro
    perimetro = 2 * PI * radio;

    // Mostrar los resultados
    std::cout << "El area del circulo es: " << area << std::endl;
    std::cout << "El perimetro del circulo es: " << perimetro << std::endl;

    return 0;
}