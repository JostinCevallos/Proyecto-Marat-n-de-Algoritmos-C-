#include <iostream>
#include <cmath>
#include <iomanip>

int main() {
    double radio;
    const double PI = M_PI; // Usa la constante M_PI de <cmath> para mayor precisión
    double volumen;

    // Solicitar al usuario que ingrese el radio
    std::cout << "Introduce el radio de la esfera: ";
    std::cin >> radio;

    // Calcular el volumen usando la fórmula V = (4/3) * π * r^3
    volumen = (4.0 / 3.0) * PI * pow(radio, 3);

    // Mostrar el resultado con formato
    std::cout << std::fixed << std::setprecision(2);
    std::cout << "El volumen de la esfera es: " << volumen << std::endl;

    return 0;
}
