#include <iostream>
#include <vector>

bool estaOrdenado(const std::vector<int>& arr) {
    for (size_t i = 0; i < arr.size() - 1; ++i) {
        if (arr[i] > arr[i+1]) {
            return false; // Se encontró un elemento mayor que el siguiente
        }
    }
    return true; // Si el bucle termina sin encontrar un desorden, está ordenado
}

int main() {
    std::vector<int> arr1 = {1, 2, 3, 4, 5};
    std::vector<int> arr2 = {1, 3, 2, 4, 5};

    if (estaOrdenado(arr1)) {
        std::cout << "El arreglo 1 está ordenado." << std::endl;
    } else {
        std::cout << "El arreglo 1 no está ordenado." << std::endl;
    }

    if (estaOrdenado(arr2)) {
        std::cout << "El arreglo 2 está ordenado." << std::endl;
    } else {
        std::cout << "El arreglo 2 no está ordenado." << std::endl;
    }

    return 0;
}





