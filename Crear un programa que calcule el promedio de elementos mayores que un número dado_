#include <iostream>
#include <vector>
#include <numeric> // Para std::accumulate

int main() {
    // 1. Declarar el vector y el número dado
    std::vector<double> numeros = {10.5, 20, 5, 15, 25, 8.2};
    double numero_dado = 10;

    // 2. Calcular la suma y el contador de los elementos que cumplen la condición
    double suma_mayores = 0;
    int contador_mayores = 0;

    for (double num : numeros) {
        if (num > numero_dado) {
            suma_mayores += num;
            contador_mayores++;
        }
    }

    // 3. Calcular y mostrar el promedio
    if (contador_mayores > 0) {
        double promedio = suma_mayores / contador_mayores;
        std::cout << "El promedio de los elementos mayores que " << numero_dado << " es: " << promedio << std::endl;
    } else {
        std::cout << "No se encontraron elementos mayores que " << numero_dado << std::endl;
    }

    return 0;
}


