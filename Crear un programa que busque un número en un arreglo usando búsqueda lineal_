#include <iostream>
#include <vector>

// Función de búsqueda lineal
int busquedaLineal(const std::vector<int>& arr, int valorBuscado) {
    for (int i = 0; i < arr.size(); ++i) {
        if (arr[i] == valorBuscado) {
            return i; // Devuelve el índice si se encuentra el valor
        }
    }
    return -1; // Devuelve -1 si el valor no está en el arreglo
}

int main() {
    // 1. Crear un arreglo (o vector en C++)
    std::vector<int> miArreglo = {10, 5, 8, 12, 3, 7};
    int valorBuscado;

    // 2. Pedir al usuario el número a buscar
    std::cout << "Ingrese el numero que desea buscar: ";
    std::cin >> valorBuscado;

    // 3. Llamar a la función de búsqueda lineal
    int posicion = busquedaLineal(miArreglo, valorBuscado);

    // 4. Mostrar el resultado
    if (posicion != -1) {
        std::cout << "El numero " << valorBuscado << " se encuentra en la posicion: " << posicion << std::endl;
    } else {
        std::cout << "El numero " << valorBuscado << " no se encuentra en el arreglo." << std::endl;
    }

    return 0;
}
