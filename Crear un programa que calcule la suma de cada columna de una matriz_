#include <iostream>
#include <vector> // Para usar std::vector

// Función para calcular la suma de cada columna
void sumarColumnas(const std::vector<std::vector<int>>& matriz) {
    if (matriz.empty()) {
        std::cout << "La matriz está vacía." << std::endl;
        return;
    }

    int numFilas = matriz.size();
    int numColumnas = matriz[0].size();

    // Vector para almacenar la suma de cada columna
    std::vector<int> sumaPorColumna(numColumnas, 0);

    // Iterar por cada columna
    for (int j = 0; j < numColumnas; ++j) {
        // Iterar por cada fila para sumar los elementos de la columna actual
        for (int i = 0; i < numFilas; ++i) {
            sumaPorColumna[j] += matriz[i][j];
        }
    }

    // Imprimir los resultados
    std::cout << "Suma de cada columna:" << std::endl;
    for (int j = 0; j < numColumnas; ++j) {
        std::cout << "Columna " << j << ": " << sumaPorColumna[j] << std::endl;
    }
}

int main() {
    // Definir una matriz de ejemplo
    std::vector<std::vector<int>> miMatriz = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };

    sumarColumnas(miMatriz);

    return 0;
}






