#include <iostream>

int main() {
    int arr[] = {10, 20, 30, 40, 50};
    int suma = 0;
    int *ptr;
    int tamano = sizeof(arr) / sizeof(arr[0]);

    // El puntero ptr apunta al inicio del arreglo (arr[0])
    ptr = arr;

    // Recorremos el arreglo usando el puntero
    for (int i = 0; i < tamano; i++) {
        // *ptr obtiene el valor del elemento actual al que apunta el puntero
        suma += *ptr;
        // ptr++ avanza el puntero a la siguiente direcciÃ³n de memoria (siguiente elemento)
        ptr++;
    }

    std::cout << "La suma de los elementos del arreglo es: " << suma << std::endl;

    return 0;
}










































